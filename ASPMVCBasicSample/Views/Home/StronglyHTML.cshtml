@model ASPMVCBasicSample.Models.User
@{
    ViewBag.Title = "StronglyHTML";
}

<h2>User Register</h2>

<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(m => m.ID, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "input your surname" })
        </div>
        <div>
            @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "input your name" })
        </div>
        <div>
            @Html.LabelFor(m => m.GenderId, new { @class = "form-label" })
            @Html.RadioButtonFor(m => m.GenderId, 1)Male
            @Html.RadioButtonFor(m => m.GenderId, 2)Female
        </div>
        <div>
            @Html.LabelFor(m => m.AddressId, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.AddressId, ViewBag.AddressList as SelectList, "--Select Address--", new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "input your phone" })
        </div>
        <div>
            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "input your email" })
        </div>
        <div>
            @Html.LabelFor(m => m.Favorite, new { @class = "form-label" })
            @Html.CheckBoxFor(m => m.Favorite)Home
            @Html.CheckBoxFor(m => m.Favorite)School
            @Html.CheckBoxFor(m => m.Favorite)Work
            @Html.CheckBoxFor(m => m.Favorite)Market
        </div>
        <div>
            @Html.LabelFor(m => m.Question): Where your was born?<br />
            @Html.TextAreaFor(m => m.Question, 5, 50, new { @class = "form-control", placeholder = "your answer" })
        </div>
        <br />
        <div>
            <input type="submit" value="SUBMIT" />
        </div>
    }
</div>